OS=$(uname -m)
echo "$OS"
if [ "$OS" == "aarch64" ]; then
  echo "install raspberry pi"
  sudo apt -y install libvulkan1 mesa-vulkan-drivers
else 
  echo "install x86"
   # vulkan
  sudo apt -y install libvulkan1 mesa-vulkan-drivers vulkan-tools libvulkan-dev vulkan-validationlayers-dev spirv-tools
fi

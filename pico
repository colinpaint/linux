set -v
#
sudo apt install git cmake gcc-arm-none-eabi libnewlib-arm-none-eabi build-essential libstdc++-arm-none-eabi-newlib
#
cd ..
mkdir -p pico
cd pico
#
git clone -b master https://github.com/raspberrypi/pico-sdk.git --recursive
git clone -b master https://github.com/raspberrypi/pico-examples.git
git clone -b master https://github.com/raspberrypi/pico-extras.git --recursive
#
git clone -b main https://github.com/pimoroni/pimoroni-pico.git --recursive
git clone -b main https://github.com/pimoroni/picosystem.git
#
git clone https://github.com/ZuluSCSI/ZuluSCSI-firmware
#
export PICO_SDK_PATH=../../pico-sdk
#
cd pico-sdk
mkdir -p build
cd build
cmake ..
make -j 8
cd ../..
#
cd pico-examples
mkdir -p build
cd build
cmake ..
make -j 8
cd ../..
#
cd pico-extras
mkdir -p build
cd build
cmake ..
make -j 8
cd ../..
#
cd pimoroni-pico
mkdir -p build
cd build
cmake ..
make -j 8
cd ../..
#
cd picosystem
mkdir -p build
cd build
cmake ..
make -j 8
cd ../..

